@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}
    <div class="container-fluid" id="archivesId">
        <div class="col-md-6 col-md-offset-5 " style="border:none; padding:0px">
            <div align="left" sstyle="text-align:left">
                <p class="" style="margin-top: 30px; font-weight: bold; text-align:left;font-size:24px">

                </p>

            </div>
        </div>
        <br />
        <div class="col-md-12 " style="background-color: #fff; border: none;">
            <br /><h3><b>All Roles</b></h3>
            <a asp-action="Create" class="btn btn-primary" style="background-color:#008F6D; color:white">Create a Role</a>
            
            <br />
        </div>
        <div class="col-md-12 " style="background-color: #fff; border: none;">
            <div class="table-responsive">
                <br />
                <table id="roleTable" class="table " style="background-color:#fff">
                    <thead>
                        <tr>@*<th>ID</th>*@<th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model.ToList())
                        {
                            <tr>
                                @*<td>@role.Id</td>*@
                                <td><b>@role.Name</b></td>
                                <td i-role="@role.Id"></td>
                                <td><a class="btn btn-sm btn-primary" asp-action="Update" style="background-color:#008F6D; color:white" asp-route-id="@role.Id">Update</a></td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
        <div class="clear"></div>
        <br />
    </div>

    <script>
        $(document).ready(function () {
             $('#roleTable').DataTable();
        });
    </script>
